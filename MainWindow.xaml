        <ProgressBar x:Name="progressBar" IsIndeterminate="True" HorizontalAlignment="Left" Height="15" VerticalAlignment="Top" Width="112" RenderTransformOrigin="0.5,0.5" Margin="183,52,0,0">
        </ProgressBar>

    </Grid>
</Window>
