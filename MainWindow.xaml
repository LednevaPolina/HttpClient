        <Label Content="Код ответа:" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top"/>
        <Button Click="Save_Button_Click" Content="Скачать страницу" HorizontalAlignment="Left" Margin="660,21,0,0" VerticalAlignment="Top" Height="47" Width="114"/>
        <Label x:Name="fileNameLabel" HorizontalAlignment="Left" Height="33" Margin="489,34,0,0"  Content="" VerticalAlignment="Top" Width="159"/>
